{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Lighting Intake",
  "type": "object",
  "required": ["answers"],
  "properties": {
    "answers": {
      "type": "object",
      "required": ["propertyType","beds","baths","interiorSizeSqft","conditionBand","tightRooms","naturalLight","occupancy","quirkyFlow","signatureFeature","likelyBuyer","locationPerk","timelinePressure","agentOnCamComfort","showingWindow"],
      "properties": {
        "propertyType":{"enum":["SFR","Condo","Townhome","Multi","Luxury","Other"]},
        "beds":{"type":"integer"},
        "baths":{"type":"number"},
        "interiorSizeSqft":{"type":"integer"},
        "conditionBand":{"enum":["pristine","updated","average","dated","needs_work"]},
        "tightRooms":{"type":"boolean"},
        "naturalLight":{"enum":["excellent","good","mixed","poor"]},
        "occupancy":{"enum":["vacant","occupied"]},
        "quirkyFlow":{"type":"boolean"},
        "signatureFeature":{"type":"string"},
        "likelyBuyer":{"enum":["first_time","move_up","downsizer","investor","remote_buyer","luxury"]},
        "locationPerk":{"enum":["walkable","commute_anchor","schools","parks","views","quiet","other"]},
        "timelinePressure":{"enum":["low","medium","high","urgent"]},
        "agentOnCamComfort":{"enum":["low","medium","high"]},
        "showingWindow":{"enum":["morning","lunch","evening","open"]}
      }
    }
  }
}
